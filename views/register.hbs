<style>
    .main-wrapper {
        height: calc(100vh - 70px);
    }
</style>

<div class="main-wrapper d-flex align-items-center justify-content-center">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-sm-10 offset-sm-1 col-12">
                <form action="/register" class="card shadow" method="post">
                    <div class="card-header">
                        <h1 class="card-title text-center">Login Page</h1>
                    </div>
                    <div class="card-body">
                        {{#if error}}
                            <div class="alert alert-danger" role="alert">
                                {{error}}
                            </div>
                        {{/if}}
                        <div class="mb-3">
                            <label class="form-label" for="fullName">Full Name</label>
                            <input type="text" id="fullName" placeholder="Eshmat Toshmatov" class="form-control" name="fullName">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="phone">Phone Number</label>
                            <input type="text" id="phone" placeholder="+998901234567" class="form-control" name="phone">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Parol</label>
                            <input type="password" id="password" placeholder="******" class="form-control" name="password">
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-dark w-100">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>